<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <title>Lista de Produtos</title>
    <link rel="stylesheet" href="{{ request.static_url('mycatalog:static/css/style.css') }}">
</head>
<body>
    <h1>üì¶ Lista de Produtos</h1>

    <div style="text-align: center; margin-bottom: 20px;">
        <a href="{{ request.route_url('home') }}" class="button">üè† Home</a>
        <a href="{{ request.route_url('add_product') }}" class="button">‚ûï Adicionar Produto</a>
    </div>

    {% if products %}
    <table>
        <thead>
            <tr>
                <th>ID</th>
                <th>Nome</th>
                <th>Descri√ß√£o</th>
                <th>Pre√ßo</th>
                <th>Imagem</th>
                <th>A√ß√µes</th>
            </tr>
        </thead>
        <tbody>
            {% for product in products %}
            <tr>
                <td>{{ product.id }}</td>
                <td>{{ product.name }}</td>
                <td>{{ product.description }}</td>
                <td>R$ {{ "%.2f"|format(product.price) }}</td>
                <td>
                    {% if product.image_path %}
                        <img src="{{ request.static_url('mycatalog:static/uploads/' ~ product.image_path) }}" width="60">
                    {% else %}
                        -
                    {% endif %}
                </td>
                <td>
                    <a href="{{ request.route_url('edit_product', id=product.id) }}" class="btn edit">‚úèÔ∏è Editar</a>
                    <a href="{{ request.route_url('delete_product', id=product.id) }}" class="btn delete">üóëÔ∏è Excluir</a>
                </td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
    {% else %}
    <p style="text-align: center;">Nenhum produto cadastrado.</p>
    {% endif %}
</body>
</html>
