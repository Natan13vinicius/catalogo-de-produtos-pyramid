<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <meta charset="UTF-8" />
  <title>Lista de Produtos</title>
  <link rel="stylesheet" href="{{ request.static_url('mycatalog:static/css/style.css') }}">
</head>
<body>
  <header>
    <h1>Produtos</h1>
    <nav>
      <a href="{{ request.route_url('home') }}">In√≠cio</a>
      <a href="{{ request.route_url('add_product') }}">Adicionar</a>
    </nav>
  </header>

  <main>
    <h2>üì¶ Lista de Produtos</h2>

    {% if products %}
      <table>
        <thead>
          <tr>
            <th>ID</th>
            <th>Nome</th>
            <th>Descri√ß√£o</th>
            <th>Pre√ßo</th>
            <th>Imagem</th>
            <th>A√ß√µes</th>
          </tr>
        </thead>
        <tbody>
        {% for product in products %}
          <tr>
            <td>{{ product.id }}</td>
            <td>{{ product.name }}</td>
            <td style="text-align:left">{{ product.description }}</td>
            <td>R$ {{ "%.2f"|format(product.price) }}</td>
            <td>
              {% if product.image_path %}
                <img src="{{ request.static_url('mycatalog:static/uploads/' ~ product.image_path) }}" alt="Imagem" />
              {% else %}-{% endif %}
            </td>
            <td>
              <a class="btn" href="{{ request.route_url('edit_product', id=product.id) }}">‚úèÔ∏è Editar</a>
              <a class="btn btn-danger" href="{{ request.route_url('delete_product', id=product.id) }}">üóëÔ∏è Excluir</a>
            </td>
          </tr>
        {% endfor %}
        </tbody>
      </table>
    {% else %}
      <p>Nenhum produto cadastrado.</p>
      <a class="btn" href="{{ request.route_url('add_product') }}">‚ûï Cadastrar primeiro produto</a>
    {% endif %}
  </main>

  <footer>
    <small>Projeto acad√™mico ¬∑ Pyramid + SQLAlchemy</small>
