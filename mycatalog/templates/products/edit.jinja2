<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <meta charset="UTF-8" />
  <title>Editar Produto</title>
  <link rel="stylesheet" href="{{ request.static_url('mycatalog:static/css/style.css') }}">
</head>
<body>
  <header>
    <h1>Editar Produto</h1>
    <nav>
      <a href="{{ request.route_url('home') }}">Início</a>
      <a href="{{ request.route_url('list_products') }}">Produtos</a>
    </nav>
  </header>

  <main>
    <form method="post" action="{{ request.route_url('edit_product', id=product.id) }}">
      <input type="hidden" name="csrf_token" value="{{ request.session.get_csrf_token() }}">

      <label for="name">Nome:</label>
      <input id="name" name="name" type="text" value="{{ product.name }}" required />

      <label for="description">Descrição:</label>
      <textarea id="description" name="description" required>{{ product.description }}</textarea>

      <label for="price">Preço:</label>
      <input id="price" name="price" type="number" step="0.01" value="{{ '%.2f'|format(product.price) }}" required />

      

      <button class="btn" type="submit">Salvar alterações</button>
      <a class="btn" href="{{ request.route_url('list_products') }}">↩ Voltar</a>
    </form>
  </main>

  <footer>
    <small>Projeto acadêmico · Pyramid + SQLAlchemy</small>
  </footer>
</body>
</html>
